<h1>
    <%= title %>
</h1>

<div class="account-form">

    <form id="loginForm" class="login-form" action="/account/login" method="post">
        <label for="account_email">Email
            <input type="email" name="account_email" id="account_email" placeholder="Your@email.com" required
                autocomplete="email" autocomplete="username" value="<%= locals.account_email %>">
        </label>
        <label for="account_password">Password
            <input type="password" name="account_password" placeholder="Password" id="account_password" required
                autocomplete="current-password"
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                title="Password must be at least 12 characters long and contain at least 1 number, 1 capital letter, and 1 special character.">
        </label>
        <span id="pswBtn" class="pswBtn-style">Show Password</span>
        <button>Log In</button>
        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
    </form>
    <span>
        No account?
        <a href="/account/register">Sign-Up</a>
    </span>
</div>

<script src="/js/script.js" defer></script>