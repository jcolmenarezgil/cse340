<h1>
    <%= title %>
</h1>


<div class="account-form">
    <p>All fields are required.</p>
    <form action="/account/register" method="post">
        <label for="account_firstname"> First Name
            <input type="text" name="account_firstname" id="account_firstname" placeholder="Given Name" required
                autocomplete="given-name" value="<%= locals.account_firstname %>"></label>
        <label for="account_lastname">Last Name
            <input type="text" name="account_lastname" id="account_lastname" placeholder="Family Name" required
                autocomplete="family-name" value="<%= locals.account_lastname %>"></label>
        <label for="account_email">Email Account
            <input type="email" name="account_email" id="account_email" placeholder="Your@email.com" required
                autocomplete="email" value="<%= locals.account_email %>"></label>
        <div id="hint"></div>
        <label for="account_password">Password
            <input type="password" name="account_password" id="account_password" placeholder="Password" required
                autocomplete="off" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                title="Password must be at least 12 characters long and contain at least 1 number, 1 capital letter, and 1 special character.">
        </label>
        <span id="pswBtn" class="pswBtn-style">Show Password</span>
        <button type="submit">Register</button>
        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
    </form>
    <span>
        Already have an account?
        <a href="/account/login">Log-In</a>
    </span>
</div>

<script src="/js/script.js" defer></script>