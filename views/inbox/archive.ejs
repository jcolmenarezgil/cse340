<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<div class="inbox-container">
    <div class="inbox-controls">
        <a href="/message" title="Return to Inbox">Return to Inbox</a>
    </div>
    <%- archiveView %>
</div>